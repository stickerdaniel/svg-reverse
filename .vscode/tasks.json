{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Flask Dev Server",
      "type": "shell",
      "command": "source .venv/bin/activate && flask --app main run --debug",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    }
  ]
} 